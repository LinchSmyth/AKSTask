<div class="row">
  <div class="col-md-1">
    <%= image_tag message.user.avatar.url(:thumb), class: 'img-rounded' %>
  </div>
  <div class="col-md-11">
    <p class="card-text">
      <span class="text-muted"><%= link_to message.user.name, user_path(id: message.user.id) %>
        at <%= message.timestamp %> says</span><br>
      <%= message.body %>
    </p>
    <hr />
  </div>
</div>
